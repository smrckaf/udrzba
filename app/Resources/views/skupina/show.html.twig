{% extends 'base.html.twig' %}

{% block body %}
    <h1>Skupina</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ skupina.id }}</td>
            </tr>
            <tr>
                <th>Nazev</th>
                <td>{{ skupina.nazev }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('skupina_index') }}">Zpět na seznam</a>
        </li>
        <li>
            <a href="{{ path('skupina_edit', { 'id': skupina.id }) }}">Editace</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Smaž">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
